
#ifndef __GNET_SYNCCRSSVRTEAMSSCORE_HPP
#define __GNET_SYNCCRSSVRTEAMSSCORE_HPP

#include "rpcdefs.h"
#include "callid.hxx"
#include "state.hxx"

