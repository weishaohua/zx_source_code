	public:
		IntVector rolelist;
		enum { PROTOCOL_TYPE = PROTOCOL_GETPLAYERFACTION };
	public:
		GetPlayerFaction() { type = PROTOCOL_GETPLAYERFACTION; }
		GetPlayerFaction(void*) : Protocol(PROTOCOL_GETPLAYERFACTION) { }
		GetPlayerFaction (IntVector l_rolelist)
			 : rolelist(l_rolelist)
		{
			type = PROTOCOL_GETPLAYERFACTION;
		}

		GetPlayerFaction(const GetPlayerFaction &rhs)
			: Protocol(rhs),rolelist(rhs.rolelist) { }

		GNET::Protocol *Clone() const { return new GetPlayerFaction(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << rolelist;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> rolelist;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 10240; }
