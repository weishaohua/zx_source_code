		GNET::Protocol *Clone() const {  return new GetDailyTop(*this); }
	public:
		enum { PROTOCOL_TYPE = RPC_GETDAILYTOP };
		GetDailyTop(Type type, Rpc::Data *argument, Rpc::Data *result)
			: RPC_BASECLASS(type, argument, result ) { }
		GetDailyTop(const GetDailyTop &rhs) : RPC_BASECLASS(rhs) { }
		int  PriorPolicy( ) const { return 1; }
		bool SizePolicy(size_t size) const { return size <= 1048576; }
		bool TimePolicy(int timeout) const { return timeout <= 40; }
