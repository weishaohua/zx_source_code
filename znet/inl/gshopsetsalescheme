	public:
		unsigned int scheme;
		enum { PROTOCOL_TYPE = PROTOCOL_GSHOPSETSALESCHEME };
	public:
		GShopSetSaleScheme() { type = PROTOCOL_GSHOPSETSALESCHEME; }
		GShopSetSaleScheme(void*) : Protocol(PROTOCOL_GSHOPSETSALESCHEME) { }
		GShopSetSaleScheme (unsigned int l_scheme)
			 : scheme(l_scheme)
		{
			type = PROTOCOL_GSHOPSETSALESCHEME;
		}

		GShopSetSaleScheme(const GShopSetSaleScheme &rhs)
			: Protocol(rhs),scheme(rhs.scheme) { }

		GNET::Protocol *Clone() const { return new GShopSetSaleScheme(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << scheme;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> scheme;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 16; }
