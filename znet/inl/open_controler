	public:
		int id;
		enum { PROTOCOL_TYPE = PROTOCOL_OPEN_CONTROLER };
	public:
		Open_Controler() { type = PROTOCOL_OPEN_CONTROLER; }
		Open_Controler(void*) : Protocol(PROTOCOL_OPEN_CONTROLER) { }
		Open_Controler (int l_id)
			 : id(l_id)
		{
			type = PROTOCOL_OPEN_CONTROLER;
		}

		Open_Controler(const Open_Controler &rhs)
			: Protocol(rhs),id(rhs.id) { }

		GNET::Protocol *Clone() const { return new Open_Controler(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << id;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> id;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 128; }
