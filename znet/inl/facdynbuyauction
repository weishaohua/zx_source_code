	public:
		int fid;
		Octets rolename;
		int itemid;
		int time;
		enum { PROTOCOL_TYPE = PROTOCOL_FACDYNBUYAUCTION };
	public:
		FacDynBuyAuction() { type = PROTOCOL_FACDYNBUYAUCTION; }
		FacDynBuyAuction(void*) : Protocol(PROTOCOL_FACDYNBUYAUCTION) { }
		FacDynBuyAuction (int l_fid,const Octets& l_rolename = Octets(),int l_itemid = 0,
			int l_time = 0)
			 : fid(l_fid),rolename(l_rolename),itemid(l_itemid)
			,time(l_time)
		{
			type = PROTOCOL_FACDYNBUYAUCTION;
		}

		FacDynBuyAuction(const FacDynBuyAuction &rhs)
			: Protocol(rhs),fid(rhs.fid),rolename(rhs.rolename),itemid(rhs.itemid)
			,time(rhs.time) { }

		GNET::Protocol *Clone() const { return new FacDynBuyAuction(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << fid;
			os << rolename;
			os << itemid;
			os << time;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> fid;
			os >> rolename;
			os >> itemid;
			os >> time;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 64; }
