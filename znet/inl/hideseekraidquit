	public:
		int roleid;
		int map_id;
		unsigned int localsid;
		int zoneid;
		enum { PROTOCOL_TYPE = PROTOCOL_HIDESEEKRAIDQUIT };
	public:
		HideSeekRaidQuit() { type = PROTOCOL_HIDESEEKRAIDQUIT; }
		HideSeekRaidQuit(void*) : Protocol(PROTOCOL_HIDESEEKRAIDQUIT) { }
		HideSeekRaidQuit (int l_roleid,int l_map_id = 0,unsigned int l_localsid = 0,
			int l_zoneid = 0)
			 : roleid(l_roleid),map_id(l_map_id),localsid(l_localsid)
			,zoneid(l_zoneid)
		{
			type = PROTOCOL_HIDESEEKRAIDQUIT;
		}

		HideSeekRaidQuit(const HideSeekRaidQuit &rhs)
			: Protocol(rhs),roleid(rhs.roleid),map_id(rhs.map_id),localsid(rhs.localsid)
			,zoneid(rhs.zoneid) { }

		GNET::Protocol *Clone() const { return new HideSeekRaidQuit(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			os << map_id;
			os << localsid;
			os << zoneid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			os >> map_id;
			os >> localsid;
			os >> zoneid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 32; }
