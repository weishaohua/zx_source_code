	public:
		int roleid;
		int battle_id;
		unsigned int localsid;
		enum { PROTOCOL_TYPE = PROTOCOL_SIEGETOP };
	public:
		SiegeTop() { type = PROTOCOL_SIEGETOP; }
		SiegeTop(void*) : Protocol(PROTOCOL_SIEGETOP) { }
		SiegeTop (int l_roleid,int l_battle_id,unsigned int l_localsid = 0)
			 : roleid(l_roleid),battle_id(l_battle_id),localsid(l_localsid)
		{
			type = PROTOCOL_SIEGETOP;
		}

		SiegeTop(const SiegeTop &rhs)
			: Protocol(rhs),roleid(rhs.roleid),battle_id(rhs.battle_id),localsid(rhs.localsid) { }

		GNET::Protocol *Clone() const { return new SiegeTop(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			os << battle_id;
			os << localsid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			os >> battle_id;
			os >> localsid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 32; }
