	public:
		int mapid;
		int raidroom_id;
		unsigned int localsid;
		enum { PROTOCOL_TYPE = PROTOCOL_FACTIONPKRAIDSTOPFIGHT };
	public:
		FactionPkRaidStopFight() { type = PROTOCOL_FACTIONPKRAIDSTOPFIGHT; }
		FactionPkRaidStopFight(void*) : Protocol(PROTOCOL_FACTIONPKRAIDSTOPFIGHT) { }
		FactionPkRaidStopFight (int l_mapid,int l_raidroom_id = 0,unsigned int l_localsid = 0)
			 : mapid(l_mapid),raidroom_id(l_raidroom_id),localsid(l_localsid)
		{
			type = PROTOCOL_FACTIONPKRAIDSTOPFIGHT;
		}

		FactionPkRaidStopFight(const FactionPkRaidStopFight &rhs)
			: Protocol(rhs),mapid(rhs.mapid),raidroom_id(rhs.raidroom_id),localsid(rhs.localsid) { }

		GNET::Protocol *Clone() const { return new FactionPkRaidStopFight(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << mapid;
			os << raidroom_id;
			os << localsid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> mapid;
			os >> raidroom_id;
			os >> localsid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 32; }
