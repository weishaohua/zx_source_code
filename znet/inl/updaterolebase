		GNET::Protocol *Clone() const {  return new UpdateRoleBase(*this); }
	public:
		enum { PROTOCOL_TYPE = RPC_UPDATEROLEBASE };
		UpdateRoleBase(Type type, Rpc::Data *argument, Rpc::Data *result)
			: RPC_BASECLASS(type, argument, result ) { }
		UpdateRoleBase(const UpdateRoleBase &rhs) : RPC_BASECLASS(rhs) { }
		int  PriorPolicy( ) const { return 1; }
		bool SizePolicy(size_t size) const { return size <= 16384; }
		bool TimePolicy(int timeout) const { return timeout <= 30; }
