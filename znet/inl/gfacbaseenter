	public:
		int roleid;
		enum { PROTOCOL_TYPE = PROTOCOL_GFACBASEENTER };
	public:
		GFacBaseEnter() { type = PROTOCOL_GFACBASEENTER; }
		GFacBaseEnter(void*) : Protocol(PROTOCOL_GFACBASEENTER) { }
		GFacBaseEnter (int l_roleid)
			 : roleid(l_roleid)
		{
			type = PROTOCOL_GFACBASEENTER;
		}

		GFacBaseEnter(const GFacBaseEnter &rhs)
			: Protocol(rhs),roleid(rhs.roleid) { }

		GNET::Protocol *Clone() const { return new GFacBaseEnter(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 64; }
