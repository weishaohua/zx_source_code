	public:
		int roleid;
		enum { PROTOCOL_TYPE = PROTOCOL_ROLELOGIN };
	public:
		RoleLogin() { type = PROTOCOL_ROLELOGIN; }
		RoleLogin(void*) : Protocol(PROTOCOL_ROLELOGIN) { }
		RoleLogin (int l_roleid)
			 : roleid(l_roleid)
		{
			type = PROTOCOL_ROLELOGIN;
		}

		RoleLogin(const RoleLogin &rhs)
			: Protocol(rhs),roleid(rhs.roleid) { }

		GNET::Protocol *Clone() const { return new RoleLogin(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 64; }
