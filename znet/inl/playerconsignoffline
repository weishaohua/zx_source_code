	public:
		int roleid;
		int provider_link_id;
		unsigned int localsid;
		enum { PROTOCOL_TYPE = PROTOCOL_PLAYERCONSIGNOFFLINE };
	public:
		PlayerConsignOffline() { type = PROTOCOL_PLAYERCONSIGNOFFLINE; }
		PlayerConsignOffline(void*) : Protocol(PROTOCOL_PLAYERCONSIGNOFFLINE) { }
		PlayerConsignOffline (int l_roleid,int l_provider_link_id = -1,unsigned int l_localsid = 0)
			 : roleid(l_roleid),provider_link_id(l_provider_link_id),localsid(l_localsid)
		{
			type = PROTOCOL_PLAYERCONSIGNOFFLINE;
		}

		PlayerConsignOffline(const PlayerConsignOffline &rhs)
			: Protocol(rhs),roleid(rhs.roleid),provider_link_id(rhs.provider_link_id),localsid(rhs.localsid) { }

		GNET::Protocol *Clone() const { return new PlayerConsignOffline(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			os << provider_link_id;
			os << localsid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			os >> provider_link_id;
			os >> localsid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 16; }
