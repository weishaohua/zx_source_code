	public:
		int userid;
		IntVector merchantlist;
		unsigned int localsid;
		enum { PROTOCOL_TYPE = PROTOCOL_FASTPAYBINDINFO };
	public:
		FastPayBindInfo() { type = PROTOCOL_FASTPAYBINDINFO; }
		FastPayBindInfo(void*) : Protocol(PROTOCOL_FASTPAYBINDINFO) { }
		FastPayBindInfo (int l_userid,IntVector l_merchantlist,unsigned int l_localsid = 0)
			 : userid(l_userid),merchantlist(l_merchantlist),localsid(l_localsid)
		{
			type = PROTOCOL_FASTPAYBINDINFO;
		}

		FastPayBindInfo(const FastPayBindInfo &rhs)
			: Protocol(rhs),userid(rhs.userid),merchantlist(rhs.merchantlist),localsid(rhs.localsid) { }

		GNET::Protocol *Clone() const { return new FastPayBindInfo(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << userid;
			os << merchantlist;
			os << localsid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> userid;
			os >> merchantlist;
			os >> localsid;
			return os;
		}

		bool SizePolicy(size_t size) const { return size <= 128; }
