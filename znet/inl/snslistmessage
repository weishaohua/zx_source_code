	public:
		int roleid;
		char message_type;
		int localsid;
		enum { PROTOCOL_TYPE = PROTOCOL_SNSLISTMESSAGE };
	public:
		SNSListMessage() { type = PROTOCOL_SNSLISTMESSAGE; }
		SNSListMessage(void*) : Protocol(PROTOCOL_SNSLISTMESSAGE) { }
		SNSListMessage (int l_roleid,char l_message_type = 0,int l_localsid = 0)
			 : roleid(l_roleid),message_type(l_message_type),localsid(l_localsid)
		{
			type = PROTOCOL_SNSLISTMESSAGE;
		}

		SNSListMessage(const SNSListMessage &rhs)
			: Protocol(rhs),roleid(rhs.roleid),message_type(rhs.message_type),localsid(rhs.localsid) { }

		GNET::Protocol *Clone() const { return new SNSListMessage(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			os << message_type;
			os << localsid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			os >> message_type;
			os >> localsid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 64; }
