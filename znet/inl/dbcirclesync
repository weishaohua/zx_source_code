		GNET::Protocol *Clone() const {  return new DBCircleSync(*this); }
	public:
		enum { PROTOCOL_TYPE = RPC_DBCIRCLESYNC };
		DBCircleSync(Type type, Rpc::Data *argument, Rpc::Data *result)
			: RPC_BASECLASS(type, argument, result ) { }
		DBCircleSync(const DBCircleSync &rhs) : RPC_BASECLASS(rhs) { }
		int  PriorPolicy( ) const { return 1; }
		bool SizePolicy(size_t size) const { return size <= 524288; }
		bool TimePolicy(int timeout) const { return timeout <= 60; }
