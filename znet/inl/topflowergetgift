	public:
		char isRecv;
		int roleid;
		unsigned int localsid;
		enum { PROTOCOL_TYPE = PROTOCOL_TOPFLOWERGETGIFT };
	public:
		TopFlowerGetGift() { type = PROTOCOL_TOPFLOWERGETGIFT; }
		TopFlowerGetGift(void*) : Protocol(PROTOCOL_TOPFLOWERGETGIFT) { }
		TopFlowerGetGift (char l_isRecv,int l_roleid = 0,unsigned int l_localsid = 0)
			 : isRecv(l_isRecv),roleid(l_roleid),localsid(l_localsid)
		{
			type = PROTOCOL_TOPFLOWERGETGIFT;
		}

		TopFlowerGetGift(const TopFlowerGetGift &rhs)
			: Protocol(rhs),isRecv(rhs.isRecv),roleid(rhs.roleid),localsid(rhs.localsid) { }

		GNET::Protocol *Clone() const { return new TopFlowerGetGift(*this); }

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << isRecv;
			os << roleid;
			os << localsid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> isRecv;
			os >> roleid;
			os >> localsid;
			return os;
		}

		int PriorPolicy( ) const { return 1; }

		bool SizePolicy(size_t size) const { return size <= 128; }
