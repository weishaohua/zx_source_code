#ifndef __GNET_DBCHANGEROLENAMEARG_RPCDATA
#define __GNET_DBCHANGEROLENAMEARG_RPCDATA

#include "rpcdefs.h"

#include "gmailsyncdata"

namespace GNET
{
	class DBChangeRolenameArg : public GNET::Rpc::Data
	{
	public:
		int roleid;
		Octets newname;
		int itemid;
		int item_pos;
		GMailSyncData syncdata;

	public:
		DBChangeRolenameArg (int l_roleid = 0,const Octets& l_newname = Octets(),int l_itemid = 0
			,int l_item_pos = -1,const GMailSyncData& l_syncdata = GMailSyncData())
			: roleid(l_roleid),newname(l_newname),itemid(l_itemid)
			,item_pos(l_item_pos),syncdata(l_syncdata)
		{
		}

		DBChangeRolenameArg(const DBChangeRolenameArg &rhs)
			: roleid(rhs.roleid),newname(rhs.newname),itemid(rhs.itemid),
			item_pos(rhs.item_pos),syncdata(rhs.syncdata) { }

		Rpc::Data *Clone() const { return new DBChangeRolenameArg(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const DBChangeRolenameArg *r = dynamic_cast<const DBChangeRolenameArg *>(&rhs);
			if (r && r != this)
			{
				roleid = r->roleid;
				newname = r->newname;
				itemid = r->itemid;
				item_pos = r->item_pos;
				syncdata = r->syncdata;
			}
			return *this;
		}

		DBChangeRolenameArg& operator = (const DBChangeRolenameArg &rhs)
		{
			const DBChangeRolenameArg *r = &rhs;
			if (r && r != this)
			{
				roleid = r->roleid;
				newname = r->newname;
				itemid = r->itemid;
				item_pos = r->item_pos;
				syncdata = r->syncdata;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			os << newname;
			os << itemid;
			os << item_pos;
			os << syncdata;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			os >> newname;
			os >> itemid;
			os >> item_pos;
			os >> syncdata;
			return os;
		}

	};
};
#endif
