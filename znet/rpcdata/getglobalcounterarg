#ifndef __GNET_GETGLOBALCOUNTERARG_RPCDATA
#define __GNET_GETGLOBALCOUNTERARG_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class GetGlobalCounterArg : public GNET::Rpc::Data
	{
	public:
		int template_id;
		int start_time;
		int duration;

	public:
		GetGlobalCounterArg (int l_template_id = -1,int l_start_time = -1,int l_duration = 0)
			: template_id(l_template_id),start_time(l_start_time),duration(l_duration)
		{
		}

		GetGlobalCounterArg(const GetGlobalCounterArg &rhs)
			: template_id(rhs.template_id),start_time(rhs.start_time),duration(rhs.duration) { }

		Rpc::Data *Clone() const { return new GetGlobalCounterArg(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const GetGlobalCounterArg *r = dynamic_cast<const GetGlobalCounterArg *>(&rhs);
			if (r && r != this)
			{
				template_id = r->template_id;
				start_time = r->start_time;
				duration = r->duration;
			}
			return *this;
		}

		GetGlobalCounterArg& operator = (const GetGlobalCounterArg &rhs)
		{
			const GetGlobalCounterArg *r = &rhs;
			if (r && r != this)
			{
				template_id = r->template_id;
				start_time = r->start_time;
				duration = r->duration;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << template_id;
			os << start_time;
			os << duration;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> template_id;
			os >> start_time;
			os >> duration;
			return os;
		}

	};
};
#endif
