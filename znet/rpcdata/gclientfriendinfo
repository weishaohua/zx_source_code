#ifndef __GNET_GCLIENTFRIENDINFO_RPCDATA
#define __GNET_GCLIENTFRIENDINFO_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class GClientFriendInfo : public GNET::Rpc::Data
	{
	public:
		int rid;
		int lineid;
		char gid;
		Octets name;

	public:
		GClientFriendInfo (int l_rid = 0,int l_lineid = 0,char l_gid = 0
			,const Octets& l_name = Octets(0))
			: rid(l_rid),lineid(l_lineid),gid(l_gid)
			,name(l_name)
		{
		}

		GClientFriendInfo(const GClientFriendInfo &rhs)
			: rid(rhs.rid),lineid(rhs.lineid),gid(rhs.gid),
			name(rhs.name) { }

		Rpc::Data *Clone() const { return new GClientFriendInfo(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const GClientFriendInfo *r = dynamic_cast<const GClientFriendInfo *>(&rhs);
			if (r && r != this)
			{
				rid = r->rid;
				lineid = r->lineid;
				gid = r->gid;
				name = r->name;
			}
			return *this;
		}

		GClientFriendInfo& operator = (const GClientFriendInfo &rhs)
		{
			const GClientFriendInfo *r = &rhs;
			if (r && r != this)
			{
				rid = r->rid;
				lineid = r->lineid;
				gid = r->gid;
				name = r->name;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << rid;
			os << lineid;
			os << gid;
			os << name;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> rid;
			os >> lineid;
			os >> gid;
			os >> name;
			return os;
		}

	};
	typedef GNET::RpcDataVector<GClientFriendInfo>	GClientFriendInfoVector;
};
#endif
