#ifndef __GNET_GETFACBASEARG_RPCDATA
#define __GNET_GETFACBASEARG_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class GetFacBaseArg : public GNET::Rpc::Data
	{
	public:
		int fid;

	public:
		GetFacBaseArg (int l_fid = 0)
			: fid(l_fid)
		{
		}

		GetFacBaseArg(const GetFacBaseArg &rhs)
			: fid(rhs.fid) { }

		Rpc::Data *Clone() const { return new GetFacBaseArg(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const GetFacBaseArg *r = dynamic_cast<const GetFacBaseArg *>(&rhs);
			if (r && r != this)
			{
				fid = r->fid;
			}
			return *this;
		}

		GetFacBaseArg& operator = (const GetFacBaseArg &rhs)
		{
			const GetFacBaseArg *r = &rhs;
			if (r && r != this)
			{
				fid = r->fid;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << fid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> fid;
			return os;
		}

	};
};
#endif
