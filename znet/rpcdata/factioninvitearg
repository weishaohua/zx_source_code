#ifndef __GNET_FACTIONINVITEARG_RPCDATA
#define __GNET_FACTIONINVITEARG_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class FactionInviteArg : public GNET::Rpc::Data
	{
	public:
		int roleid;
		int invitee;
		unsigned int factionid;
		Octets faction_name;
		Octets role_name;
		char scale;

	public:
		FactionInviteArg (int l_roleid = -1,int l_invitee = -1,unsigned int l_factionid = 0
			,const Octets& l_faction_name = Octets(),const Octets& l_role_name = Octets(),char l_scale = 0)
			: roleid(l_roleid),invitee(l_invitee),factionid(l_factionid)
			,faction_name(l_faction_name),role_name(l_role_name),scale(l_scale)
		{
		}

		FactionInviteArg(const FactionInviteArg &rhs)
			: roleid(rhs.roleid),invitee(rhs.invitee),factionid(rhs.factionid),
			faction_name(rhs.faction_name),role_name(rhs.role_name),scale(rhs.scale) { }

		Rpc::Data *Clone() const { return new FactionInviteArg(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const FactionInviteArg *r = dynamic_cast<const FactionInviteArg *>(&rhs);
			if (r && r != this)
			{
				roleid = r->roleid;
				invitee = r->invitee;
				factionid = r->factionid;
				faction_name = r->faction_name;
				role_name = r->role_name;
				scale = r->scale;
			}
			return *this;
		}

		FactionInviteArg& operator = (const FactionInviteArg &rhs)
		{
			const FactionInviteArg *r = &rhs;
			if (r && r != this)
			{
				roleid = r->roleid;
				invitee = r->invitee;
				factionid = r->factionid;
				faction_name = r->faction_name;
				role_name = r->role_name;
				scale = r->scale;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			os << invitee;
			os << factionid;
			os << faction_name;
			os << role_name;
			os << scale;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			os >> invitee;
			os >> factionid;
			os >> faction_name;
			os >> role_name;
			os >> scale;
			return os;
		}

	};
};
#endif
