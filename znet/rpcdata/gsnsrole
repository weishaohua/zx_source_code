#ifndef __GNET_GSNSROLE_RPCDATA
#define __GNET_GSNSROLE_RPCDATA

#include "rpcdefs.h"

#include "gsnsgsroleinfo"
#include "gcreditinfo"
#include "gpetsinfo"
#include "gpocketinfo"

namespace GNET
{
	class GSNSRole : public GNET::Rpc::Data
	{
	public:
		GSNSGsRoleInfo gsroleinfo;
		GCreditInfo creditinfo;
		GPetsInfo petinfo;
		GPocketInfo pocketinfo;

	public:
		GSNSRole (const GSNSGsRoleInfo& l_gsroleinfo = GSNSGsRoleInfo(),const GCreditInfo& l_creditinfo = GCreditInfo(),const GPetsInfo& l_petinfo = GPetsInfo()
			,const GPocketInfo& l_pocketinfo = GPocketInfo())
			: gsroleinfo(l_gsroleinfo),creditinfo(l_creditinfo),petinfo(l_petinfo)
			,pocketinfo(l_pocketinfo)
		{
		}

		GSNSRole(const GSNSRole &rhs)
			: gsroleinfo(rhs.gsroleinfo),creditinfo(rhs.creditinfo),petinfo(rhs.petinfo),
			pocketinfo(rhs.pocketinfo) { }

		Rpc::Data *Clone() const { return new GSNSRole(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const GSNSRole *r = dynamic_cast<const GSNSRole *>(&rhs);
			if (r && r != this)
			{
				gsroleinfo = r->gsroleinfo;
				creditinfo = r->creditinfo;
				petinfo = r->petinfo;
				pocketinfo = r->pocketinfo;
			}
			return *this;
		}

		GSNSRole& operator = (const GSNSRole &rhs)
		{
			const GSNSRole *r = &rhs;
			if (r && r != this)
			{
				gsroleinfo = r->gsroleinfo;
				creditinfo = r->creditinfo;
				petinfo = r->petinfo;
				pocketinfo = r->pocketinfo;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << gsroleinfo;
			os << creditinfo;
			os << petinfo;
			os << pocketinfo;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> gsroleinfo;
			os >> creditinfo;
			os >> petinfo;
			os >> pocketinfo;
			return os;
		}

	};
};
#endif
