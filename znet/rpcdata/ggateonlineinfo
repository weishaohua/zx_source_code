#ifndef __GNET_GGATEONLINEINFO_RPCDATA
#define __GNET_GGATEONLINEINFO_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class GGateOnlineInfo : public GNET::Rpc::Data
	{
	public:
		int roleid;

	public:
		GGateOnlineInfo (int l_roleid = 0)
			: roleid(l_roleid)
		{
		}

		GGateOnlineInfo(const GGateOnlineInfo &rhs)
			: roleid(rhs.roleid) { }

		Rpc::Data *Clone() const { return new GGateOnlineInfo(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const GGateOnlineInfo *r = dynamic_cast<const GGateOnlineInfo *>(&rhs);
			if (r && r != this)
			{
				roleid = r->roleid;
			}
			return *this;
		}

		GGateOnlineInfo& operator = (const GGateOnlineInfo &rhs)
		{
			const GGateOnlineInfo *r = &rhs;
			if (r && r != this)
			{
				roleid = r->roleid;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			return os;
		}

	};
};
#endif
