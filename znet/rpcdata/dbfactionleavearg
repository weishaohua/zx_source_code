#ifndef __GNET_DBFACTIONLEAVEARG_RPCDATA
#define __GNET_DBFACTIONLEAVEARG_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class DBFactionLeaveArg : public GNET::Rpc::Data
	{
	public:
		unsigned int fid;
		unsigned int familyid;
		int contribution;

	public:
		DBFactionLeaveArg (unsigned int l_fid = 0,unsigned int l_familyid = 0,int l_contribution = 0)
			: fid(l_fid),familyid(l_familyid),contribution(l_contribution)
		{
		}

		DBFactionLeaveArg(const DBFactionLeaveArg &rhs)
			: fid(rhs.fid),familyid(rhs.familyid),contribution(rhs.contribution) { }

		Rpc::Data *Clone() const { return new DBFactionLeaveArg(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const DBFactionLeaveArg *r = dynamic_cast<const DBFactionLeaveArg *>(&rhs);
			if (r && r != this)
			{
				fid = r->fid;
				familyid = r->familyid;
				contribution = r->contribution;
			}
			return *this;
		}

		DBFactionLeaveArg& operator = (const DBFactionLeaveArg &rhs)
		{
			const DBFactionLeaveArg *r = &rhs;
			if (r && r != this)
			{
				fid = r->fid;
				familyid = r->familyid;
				contribution = r->contribution;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << fid;
			os << familyid;
			os << contribution;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> fid;
			os >> familyid;
			os >> contribution;
			return os;
		}

	};
};
#endif
