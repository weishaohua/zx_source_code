#ifndef __GNET_DBKINGGETREWARDARG_RPCDATA
#define __GNET_DBKINGGETREWARDARG_RPCDATA

#include "rpcdefs.h"


namespace GNET
{
	class DBKingGetRewardArg : public GNET::Rpc::Data
	{
	public:
		int roleid;

	public:
		DBKingGetRewardArg (int l_roleid = 0)
			: roleid(l_roleid)
		{
		}

		DBKingGetRewardArg(const DBKingGetRewardArg &rhs)
			: roleid(rhs.roleid) { }

		Rpc::Data *Clone() const { return new DBKingGetRewardArg(*this); }

		Rpc::Data& operator = (const Rpc::Data &rhs)
		{
			const DBKingGetRewardArg *r = dynamic_cast<const DBKingGetRewardArg *>(&rhs);
			if (r && r != this)
			{
				roleid = r->roleid;
			}
			return *this;
		}

		DBKingGetRewardArg& operator = (const DBKingGetRewardArg &rhs)
		{
			const DBKingGetRewardArg *r = &rhs;
			if (r && r != this)
			{
				roleid = r->roleid;
			}
			return *this;
		}

		OctetsStream& marshal(OctetsStream & os) const
		{
			os << roleid;
			return os;
		}

		const OctetsStream& unmarshal(const OctetsStream &os)
		{
			os >> roleid;
			return os;
		}

	};
};
#endif
